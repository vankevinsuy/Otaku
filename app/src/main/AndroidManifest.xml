<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wallaby.otaku">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.anime.SaisonExplorerActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.VideoPlayingActivity"
            android:theme="@style/LectureVideoTheme"
            android:screenOrientation="sensorLandscape"/>


        <activity
            android:name=".ui.scan.LectureActivity"
            android:theme="@style/LectureTheme" />


        <activity android:name=".ExploreFirstLevel"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".PermissionAndUpdateDataActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>